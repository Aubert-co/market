datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}



generator client {
  provider = "prisma-client-js"
  output = "/node_modules/.prisma/client"

}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  password String
  stores    Store[] 
}

model Store {
  id          Int      @id @default(autoincrement())
  userId      Int      
  name        String   @unique 
  description String?  
  photo       String?  
  user        User     @relation(fields: [userId], references: [id])

  @@map("stores") 
}